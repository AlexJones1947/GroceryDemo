            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".CaptureImageActivity"
            android:screenOrientation="portrait"
            android:taskAffinity=""
            android:theme="@style/Theme_Dialog"
            android:windowSoftInputMode="adjustPan" />-->
    </application>

</manifest>